<config>
    <modules>
        <Ec_Install>
            <version>1.0.5</version>
        </Ec_Install>
    </modules>
    <global>
        <resources>
            <ec_install_setup>
                <setup>
                    <module>Ec_Install</module>
                    <class>Ec_Install_Model_Resource_Setup</class>
                </setup>
            </ec_install_setup>
        </resources>
    </global>
    <default>
        <design>
            <theme>
                <locale>ec</locale>
                <template>ec</template>
                <skin>ec</skin>
                <layout>ec</layout>
                <default>ec</default>
            </theme>
            <head>
                <default_title>Econom-Centr</default_title>
            </head>
            <header>
                <logo_alt>Econom-Centr</logo_alt>
            </header>
            <footer>
                <copyright>www.econom-centr.com.ua - 2kish Development</copyright>
            </footer>
        </design>
        <wishlist>
            <general>
                <active>0</active>
            </general>
        </wishlist>
    </default>
    <frontend>
        <layout>
            <updates>
                <ec_install>
                    <file>ec/install.xml</file>
                </ec_install>
            </updates>
        </layout>
    </frontend>
</config>
